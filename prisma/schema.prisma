generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  createdAt DateTime @default(now())

  quizzes Quiz[] // No need to define onDelete here
}

model Quiz {
  id               Int     @id @default(autoincrement())
  userId           Int
  topic            String
  difficultyLevel  String
  numberOfQuestions Int
  typeOfQuestions  String
  createdAt        DateTime @default(now())

  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade) // Deleting user deletes quizzes
  mcqs    MCQ[]
  msqs    MSQ[]
  fibs    FIB[]
}

model MCQ {
  id           Int     @id @default(autoincrement())
  quizId       Int
  questionText String
  option1      String
  option2      String
  option3      String
  option4      String
  correctAnswer String

  quiz  Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade) // Deleting quiz deletes MCQs
}

model MSQ {
  id            Int     @id @default(autoincrement())
  quizId        Int
  questionText  String
  option1       String
  option2       String
  option3       String
  option4       String
  correctAnswers String[]

  quiz  Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade) // Deleting quiz deletes MSQs
}

model FIB {
  id           Int     @id @default(autoincrement())
  quizId       Int
  questionText String
  correctAnswer String

  quiz  Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade) // Deleting quiz deletes FIBs
}
